<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/route_list_content"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="16dp">

    <LinearLayout
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <View
            android:id="@+id/marker1"
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_weight="1"
            android:background="@drawable/rect_dashed"/>

        <View
            android:id="@+id/marker2"
            android:layout_width="13dp"
            android:layout_height="18dp"
            android:visibility="gone"/>

        <View
            android:id="@+id/marker3"
            android:layout_width="13dp"
            android:layout_height="18dp"
            android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/firstLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/default_route_name"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/secondLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/default_user_name"
            android:textSize="16sp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/is_route_done"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="@string/content_description_done"
        android:src="@drawable/edit_doneblue"/>

    <TextView
        android:id="@+id/rightLabel"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:text="@string/default_route_grade"
        android:textSize="24sp"/>

</LinearLayout>