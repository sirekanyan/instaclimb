<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/card_view_route_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:text="Название"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/card_view_route_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:text="Автор"
            android:textSize="14sp"/>

        <LinearLayout
            android:id="@+id/route_marker"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="16dp">

            <View
                android:id="@+id/card_view_route_marker1"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/rect_dashed"/>

            <View
                android:id="@+id/card_view_route_marker2"
                android:layout_width="7dp"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:visibility="gone"/>

            <View
                android:id="@+id/card_view_route_marker3"
                android:layout_width="7dp"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:visibility="gone"/>

        </LinearLayout>

        <TextView
            android:id="@+id/card_view_route_created_when"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/default_route_date"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/card_view_route_num_climbed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Трассу пока никто не пролез"
            android:textSize="14sp"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
