<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="userRow"
            type="me.vadik.instaclimb.model.User"/>
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/card_view_route_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="24dp"
                android:text="aaaaaaa"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/card_view_route_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:text="bbbbbbbbbb"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/card_view_route_created_when"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="vvvvvvvvvvv"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/card_view_route_num_climbed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="dddddddd"
                android:textSize="14sp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</layout>
