<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/route_list_content"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="16dp">

    <LinearLayout
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <View
            android:id="@+id/marker1"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:layout_weight="1"
            android:background="@drawable/rect_dashed"/>

        <View
            android:id="@+id/marker2"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:visibility="gone"/>

        <View
            android:id="@+id/marker3"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:visibility="gone"/>

    </LinearLayout>

    <TextView
        android:id="@+id/firstLine"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:text="@string/default_route_name"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/secondLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="@string/default_route_author"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/thirdLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="@string/default_route_date"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/rightLabel"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/default_route_grade"
        android:textSize="24sp"/>

</LinearLayout>